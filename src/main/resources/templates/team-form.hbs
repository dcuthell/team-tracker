{{#partial "content"}}

    {{#if editTeam}}
        <h3>Change Your Team Name</h3>

        <form action="/teams/{{editTeam.id}}/update-name" method="post">
            <label for="name">Team Name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn btn-default">Update Name</button>
        </form>
    {{else if addMember}}
        <h3>Add a Team Member</h3>

        <form action="/teams/{{addMember.id}}/add-member" method="post">
            <label for="member">Member Name</label>
            <input id="member" name="member" type="text">
            <button type="submit" class="btn btn-default">Add Member</button>
        </form>
    {{else}}
        <h1>Add a new Team!</h1>

        <h2>Please enter a team name, description, and name of team leader</h2>
        <h3>More team members can be added later</h3>

        <form action="/teams/new" method="post">
            <label for="name">Team Name</label>
            <input id="name" name="name" type="text">
            <label for="description">Team Description</label>
            <input id="description" name="description" type="text">
            <label for="leader">Team Leader Name</label>
            <input id="leader" name="leader" type="text">

            <button type="submit" class="btn btn-default">Create a New Team</button>
        </form>
    {{/if}}


{{/partial}}

{{> layout.hbs}}